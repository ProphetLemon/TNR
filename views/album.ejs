<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Álbum de Cartas</title>
    <link rel="icon" type="image/x-icon" href="/src/img/TNR-logo.ico" />
    <!-- Incluir el CSS de Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Incluir el CSS de Turn.js y estilos personalizados -->
    <link rel="stylesheet" href="/src/css/base.css" />
    <link rel="stylesheet" href="/src/css/album.css" />
  </head>
  <body>
    <!-- Incluir el navbar -->
    <%- include('partials/navbar') %>
    <audio id="audio" class="d-none" type="audio/mpeg"></audio>
    <div id="album-container">
      <div id="flipbook">
        <div class="hard">Álbum de <%=usuario.username%></div>
        <div class="hard"></div>

        <% for (let i = 0; i < cards.length; i++) { %>
        <div class="page">
          <div class="card-container">
            <div class="result-card <%= cards[i].rareza %>">
              <!-- Lado frontal -->
              <div class="card-front" style="background-image: url(<%=cards[i].imagenBase64%>); background-size: cover; background-position: center"></div>
              <!-- Lado trasero -->
              <div class="card-back">
                <div class="card-info">
                  <h5 class="card-title"><%= cards[i].nombre %></h5>
                  <p class="card-rarity">Rareza: <%= cards[i].rareza %></p>
                  <p class="card-count">Cantidad: x<%= cards[i].size %></p>
                  <button id="play-audio-btn" onclick="playAudio('<%=cards[i].audioBase64%>')">Reproducir Audio</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>

        <!-- Añadir una página en blanco si el número de cartas lo precisa -->
        <% if (cards.length % 2 <= 1 && cards.length % 2 > 0) { %>
        <div class="page"></div>
        <% } %>

        <div class="hard"></div>
        <div class="hard">Fin ♥</div>
      </div>
      <button id="back-to-start" class="btn btn-primary float-end" style="display: none">Volver al inicio</button>
    </div>

    <!-- Incluir el footer -->
    <%- include('partials/footer') %>

    <!-- Incluir el JavaScript de jQuery (opcional) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <!-- Incluir el JavaScript de Bootstrap 5.3.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el JavaScript personalizado -->
    <script src="/src/js/turn.min.js"></script>
    <script src="/src/js/album.js"></script>
    <script src="/src/js/base.js"></script>
  </body>
</html>
