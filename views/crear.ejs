<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Página de Inicio</title>
    <link rel="icon" type="image/x-icon" href="/src/img/TNR-logo.ico" />
    <!-- Incluir el CSS de Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Incluir el CSS personalizado -->
    <link href="/src/css/base.css" rel="stylesheet" />
    <link href="/src/css/crear.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Incluir el navbar -->
    <%- include('partials/navbar') %>
    <div class="container crear-carta-container">
      <h1 class="text-center">Crear Carta</h1>
      <%- include('partials/notification', { message: message, type: type }) %>
      <form action="/crear" method="POST" enctype="multipart/form-data">
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="nombre" class="form-label">Nombre:</label>
            <input type="text" id="nombre" name="nombre" class="form-control" required />
          </div>
          <div class="col-md-6">
            <label for="rareza" class="form-label">Rareza:</label>
            <select id="rareza" name="rareza" class="form-select" required>
              <option value="normal">Normal</option>
              <option value="rara">Rara</option>
              <option value="muy-rara">Muy Rara</option>
              <option value="legendaria">Legendaria</option>
            </select>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <label for="imagen" class="form-label">Imagen:</label>
            <input type="file" id="imagen" name="imagen" accept="image/*" class="form-control" required />
          </div>
          <div class="col-md-6">
            <img id="preview-image" src="#" alt="Previsualización de la imagen" class="img-fluid d-none mt-3" style="max-height: 200px" />
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <label for="audio" class="form-label">Audio:</label>
            <input type="file" id="audio" name="audio" accept="audio/*" class="form-control" required />
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Crear Carta</button>
      </form>
    </div>

    <!-- Incluir el footer -->
    <%- include('partials/footer') %>

    <!-- Incluir el JavaScript de jQuery (opcional) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <!-- Incluir el JavaScript de Bootstrap 5.3.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el JavaScript personalizado -->
    <script src="/src/js/base.js"></script>
    <script src="/src/js/crear.js"></script>
  </body>
</html>
